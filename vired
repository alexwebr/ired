#!/bin/sh
ttyset=`stty -g`
stty -echo -icanon min 1

getstr() {
	stty icanon echo
	read A
	echo $A
	stty -icanon -echo
}

while : ; do
	echo "!clear"
	#printf "\e[2J" > /dev/stderr
	echo x
	read -n1 A
	case $A in
	'j') echo "s+16" ;;
	'k') echo "s-16" ;;
	'h') echo "s-1" ;;
	'l') echo "s+1" ;;
	'q') stty $ttyset; exit ;;
	'w') printf 'w '>/dev/stderr; echo w `getstr` ;;
	's') printf 's '>/dev/stderr; echo s `getstr` ;;
	'+') echo "b+1" ;;
	'-') echo "b-1" ;;
	'*') echo "b+16" ;;
	'/') echo "b-16" ;;
	esac
done
